{
  "manifest_version": 2,

  "name": "Commit Issue Linker",
  "description": "This extension adds links to your issue tracker when you are inside a github commit/pull request",
  "version": "0.1",

  "content_scripts": [
   {
     "matches": ["https://github.com/*/pull/*"],
     "js": ["vendor/jquery/dist/jquery.min.js", "src/storage/repository-storage.js", "src/githubProcessing/handleGitHub.js"]
   },
   {
     "matches": ["https://github.com/*/commit/*"],
     "js": ["vendor/jquery/dist/jquery.min.js", "src/storage/repository-storage.js", "src/githubProcessing/handleGitHub.js"]
   }
 ],
  "browser_action": {
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "storage"
  ]
}
